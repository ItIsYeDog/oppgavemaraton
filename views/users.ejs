<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head.ejs') %> 
</head>
<body>
    <h1>Users</h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
                    <td>
                        <form action="/users/<%= user._id %>/delete" method="POST" style="display:inline;">
                            <button type="submit">üóëÔ∏è</button>
                        </form>
                        <% if (!user.isAdmin) { %>
                            <form action="/users/<%= user._id %>/upgrade" method="POST" style="display:inline;">
                                <button type="submit">‚¨ÜÔ∏è</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <%- include ('partials/foot.ejs') %> 
</body>
</html>